type Movie {
    id: ID
    nom: String
    description: String
    dateSortie: String
    duree: Int
    genre: String
    image: String
}

input MovieInput {
    nom: String
    description: String
    dateSortie: String
    duree: Int
    genre: String
}

input MovieInputWithId {
    id: ID
    nom: String
    description: String
    dateSortie: String
    duree: Int
    genre: String
}

type Query {
    movieById(id: ID): Movie
    allMovies: [Movie]
    movieByNom(nom: String): Movie
}

type Mutation {
    createMovieWithImage(movie: MovieInput): Movie
    updateMovie(movie: MovieInputWithId): Movie
    deleteMovie(id: ID!): Movie
}